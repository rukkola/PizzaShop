<h2>Your cart</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">Qty</th>
    </tr>
  </thead>
  <tbody>

  <% total_price = 0 %>
  <% total_qty = 0 %>
  <%= @items %>
  <% @items.each do |item| %>
	    <tr>
	      <td><%= item[0].title %></td>
	      <td><%= item[0].price %></td>
	      <td><%= item[1] %></td>
	    </tr>
	<% total_price += item[0].price * item[1].to_i %>
	<% total_qty += item[1].to_i %>
    <% end %>
    	 <tr>
	      <td></td>
	      <td> Total: <%= total_price %> rub</td>
	      <td><%= total_qty %></td>
	    </tr>
  </tbody>
</table>

<form action="/place_order" method="POST">

	<input type="hidden" name="order[orders_input]" value="<%= @orders_input %>" />

	<div class="form-group">
		<label>Name:</label>
		<input type="text" name="order[name]" class="form-control">
	</div>

	<div class="form-group">
		<label>Phone:</label>
		<input type="text" name="order[phone]" class="form-control">
	</div>

	<div class="form-group">
		<label>Delivery address</label>
		<textarea name="order[address]" class="form-control"></textarea> 
	</div>

	<button type="submit" class="btn btn-success btn-lg">Place this order</button>

</form>